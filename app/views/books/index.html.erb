<body class="index">

  <div class="books-index">
    <br>
    <br>
    <br>
    <h1 style="color: white;">Books</h1>
    <br>
    <table class="books-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Summary</th>
          <th>Rating</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= truncate(book.summary, :length => 200) %></td>
            <td><%= book.rating %></td>
            <td><%= link_to 'Show', book, class: "a-primary" %></td>
            <td><%= link_to 'Edit', edit_book_path(book), class: "a-primary"  %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "a-primary"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>

  <%= link_to 'New Book', new_book_path, class: "a-primary"  %>

</body>
