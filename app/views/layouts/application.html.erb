<!DOCTYPE html>
<html>
  <head>
    <title>Bookshelf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if notice %>
      <p class="alert alert-success" data-dismiss="alert"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <% if user_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="collapse navbar-collapse" id="navbar-Nav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/books/">Books</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/favorites/index/">Favorites</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/review/">Review</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/edit/">Account</a>
          </li>
          <li class="nav-link" style="margin-left: 700px; margin-right: 15px; color: black;">
            Hello, <strong><%= current_user.first_name %></strong>
          </li>
          <li class="nav-link">
            <strong><%= link_to 'Logout', destroy_user_session_path, method: :delete, id: "logout-button" %></strong>
          </li>
        </ul>
      </div>
    </nav>

    <% else %>

    <% end %>


    <%= yield %>

  </body>
</html>
